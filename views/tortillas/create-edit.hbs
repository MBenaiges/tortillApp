<div class="container">
  <form action="/" method="POST">
    <label>Name:</label>
    <input type="text" name="name" value="{{name}}">
    <label>Special: </label>
    <input type="text" name="special" value="{{special}}">
    <label>Size:  </label>
    <select id="size-select" name="size" value="{{size}}">
      <option value="small">Small</option>
      <option value="medium">Medium</option>
      <option value="big">Big</option>
    </select>

    {{#if name}}
    <input type="hidden" name="_id" value="{{_id}}">
    <button type="submit">Editar tortilla</button>
    {{else}}
    <button type="submit">Create yo' tortilla!</button>
    {{/if}}

  </form>
</div>